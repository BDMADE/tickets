<div class="login-box">
  <div class="login-logo">
  <b>Tickets</b>&nbsp;Management    
  </div>

  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>

    <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group has-feedback">
          <%= f.text_field :username, class: 'form-control', placeholder: 'Username or Email', required: 'require' %>
          <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: 'require' %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>

        <div class="row">
          <div class="col-xs-8">
            <div class="checkbox icheck">
              <label>
                <%= f.check_box :remember_me %> Remember Me
              </label>
            </div>
          </div>
          <div class="col-xs-4">
            <%= f.submit 'Sign In', class: 'btn btn-primary btn-block btn-flat' %>
          </div>
        </div>
    <% end %>
  </div>
</div>
