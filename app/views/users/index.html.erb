<div class="row">
  <div class="col-xs-12 col-md-12">
    <div class="box">
      <div class="box-header">
        <div class=" col-md-6 col-xs-6">
          <h3 class="box-title">User List</h3>
        </div>
        <div class="col-md-6 col-xs-6" align="right">
          <a href="<%= new_user_url %>" class="btn btn-primary btn-sm <%= 'hidden' unless has_permission?('add') %>" ><i class="fa fa-plus-circle"></i> Add New</a>
          <a href="<%= user_types_url %>" class="btn btn-primary btn-sm <%= 'hidden' unless has_permission?('usertype') %>" ><i class="fa fa-users"></i> User Type</a>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Username</th>
            <th>E-mail</th>
            <th>Published</th>            
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.user_type_name.upcase %></td>
                <td><%= user.username %></td>
                <td><%= user.email.downcase %></td>
                <td><%= user.published %></td>                
                <td>
                  <a href="<%= edit_user_path(user) %>" class="btn btn-info btn-flat <%= 'hidden' unless has_permission?('edit') %>" ><i class="fa fa-pencil"></i></a>
                  <a href="<%= user_path(user) %>" class="btn btn-success btn-flat" ><i class="fa fa-eye"></i></a>
                  <a data-confirm="Are you sure?" class='btn btn-danger btn-flat <%= 'hidden' unless has_permission?('remove_ability') %>' rel="nofollow" data-method="delete" href="<%= user_path(user) %>"><i class="fa fa-trash-o"></i></a>
                </td>
              </tr>
          <% end %>
          </tbody>
          <tfoot>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Username</th>
            <th>E-mail</th>
            <th>Published</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
          </tfoot>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
  <!-- /.col -->
</div>
<!-- /.row -->