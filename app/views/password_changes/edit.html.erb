<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <div class="col-md-6">
          <h3 class="box-title">Please provide following information</h3>
        </div>
      </div><!-- /.box-header -->
      <div class="box-body">
        <%= form_for(:password_changes, url: password_changes_path) do |f| %>
          <div class="col-xs-6">
            <div>
              <label>Current Password </label>*
              <%= f.password_field :old_password, class: 'form-control', placeholder: 'Current Password', required: 'required' %>
            </div>
            <div>
              <label>New Password</label>*
              <%= f.password_field :password, class: 'form-control', placeholder: 'New Password', required: 'required' %>
            </div>

            <div>
              <label>Confirm New Password</label>*
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirm', required: 'required' %>
            </div>
            <br clear="all" />
            <div class="modal-footer">
              <%= f.submit 'Update Password', class: 'btn btn-primary btn-block btn-flat' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
