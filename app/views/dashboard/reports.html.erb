<!-- Main row -->
<div class="row">
  <div class="col-xs-12 col-md-12 col-lg-12">
    <div class="box">
      <div class="box-header">
        <div class=" col-md-6 col-xs-6">
          <h3 class="box-title">Ticket closed in last month (<%= 1.month.ago.end_of_month %>)</h3>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <table id="example4" class="table table-bordered table-striped">
          <thead>
          <tr>
            <th>Customer Name</th>
            <th>Subject</th>
            <th>Message</th>
            <th>Status</th>
          </tr>
          </thead>
          <tbody>
          <% @tickets.each do |ticket| %>
            <tr>
              <td><%= ticket.user.name %></td>
              <td><%= ticket.subject %></td>
              <td><%= ticket.message.html_safe %></td>
              <% if ticket.status_type == 'open' %>
                <% span_class = 'label-success'  %>
              <% else %>
                <% span_class = 'label-danger'  %>
              <% end %>
              <td>
                <span class="label <%= span_class %>"><%= ticket.status_type %></span></td>
            </tr>
          <% end %>
          </tbody>
          <tfoot>
          <tr>
            <th>Customer Name</th>
            <th>Subject</th>
            <th>Message</th>
            <th>Status</th>
          </tr>
          </tfoot>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
  <!-- /.col -->
</div>
<!-- /.row -->
